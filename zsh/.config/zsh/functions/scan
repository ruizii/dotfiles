scan() {
    if [[ "$#" -eq 0 ]]; then
        print -P "%F{red}[x] Please provide IP address to scan%f"
    elif [[ "$#" -eq 1 ]]; then
        sudo rustscan -a "$1" -- -sCV -oN scan.txt | bat
    else
        args=""
        for arg in "$@"; do
            args="$args,$arg"
        done
        args=${args:1}

        sudo rustscan -a "$args" -- -sCV -oN scan.txt | bat
    fi
}
